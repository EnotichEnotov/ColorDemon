<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    android:orientation="vertical"
    tools:context=".activities.Shop"
    android:background="#FFFFFF"
   >
    <Button
        android:gravity="center"
        android:id="@+id/button_character"
        android:layout_width="200dp"
        android:layout_alignParentLeft="true"
        android:layout_height="60dp"
        android:text="@string/shop_button_characters"
        android:textSize="28sp"
        android:textColor="@color/black"/>
    <Button
        android:gravity="center"
        android:id="@+id/button_weapon"
        android:layout_width="200dp"
        android:layout_alignParentRight="true"
        android:layout_height="60dp"
        android:text="@string/shop_button_weapons"
        android:textSize="28sp"
        android:textColor="@color/black"/>



    <ListView
        android:id="@+id/listview"
        android:layout_below="@id/button_character"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>